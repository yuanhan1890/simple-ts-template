{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "trailing-comma": true,
    "semicolon": true
  },
  "rules": {
    "no-empty-interface": false,
    "no-empty": false,
    "object-literal-sort-keys": false,
    "max-classes-per-file": false,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "case-insensitive",
        "named-imports-order": "case-insensitive",
        "grouped-imports": true,
        "groups": [
          {
            "match": "^@",
            "order": 20
          },
          {
            "name": "parent_dir",
            "match": "^[.][.]",
            "order": 40
          },
          {
            "name": "current dir",
            "match": "^[.]",
            "order": 50
          },
          {
            "name": "packages",
            "match": ".*",
            "order": 10
          }
        ]
      }
    ]
  },
  "rulesDirectory": []
}
